<%= simple_form_for(@story) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :author_id %>
    <%= f.input :title %>
    <%= f.input :publish_date %>
    <%= f.input :complete_date %>
    <%= f.input :active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Begin Story' %>
  </div>
<% end %>
