<p id="notice"><%= notice %></p>

<p>
  <b>Main Author:</b>
  <%= link_to @story.author.name, @story.author %>
</p>

<p>
  <b>Title:</b>
  <%= @story.title %>
</p>

<p>
  <b>Publish date:</b>
  <%= @story.publish_date %>
</p>

<p>
  <b>Complete date:</b>
  <%= @story.complete_date %>
</p>

<%= link_to 'Compose', compose_story_path(@story) %>

<% unless @story.includes_author?(current_author) %>
  <%= link_to 'Join Story', join_story_path(@story) %>
<% else %>
  <%= link_to 'Leave Story', leave_story_path(@story) %>
<% end %>

<h2>Authors</h2>
<table class="sub-table">
  <% if @story.sentences.count > 0 %>
  <% else %>
    Nothing Written Yet
  <% end %>
</table>

<%= link_to 'Edit', edit_story_path(@story) %> |
<%= link_to 'Back', stories_path %>
