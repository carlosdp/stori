<h1>Listing stories</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Title</th>
    <th>Publish date</th>
    <th>Complete date</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stories.each do |story| %>
  <tr>
    <td><%= story.author_id %></td>
    <td><%= story.title %></td>
    <td><%= story.publish_date %></td>
    <td><%= story.complete_date %></td>
    <td><%= story.active %></td>
    <td><%= link_to 'Show', story %></td>
    <td><%= link_to 'Edit', edit_story_path(story) %></td>
    <td><%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

