<!DOCTYPE html>
<html>
<head>
  <title>Stori</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="nav">
    <%= link_to 'Story', root_path, class: 'brand' %>

    <ul class="nav-links">
      <li><%= link_to 'Stories', stories_path %></li>
    </ul>

    <%= link_to 'Create a Story', new_story_path, class: 'story-button' %>
    <%= link_to 'Sign Up', signup_path, class: 'signup' %>
    <% unless current_author %>
      <%= link_to 'Login', login_path, class: 'login' %>
    <% else %>
      <%= link_to 'Logout', logout_path, class: 'logout' %>
    <% end %>
  </div>

  <% if flash[:notice] %>
    <div class="notice">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:error] %>
    <div class="error">
      <%= flash[:error] %>
    </div>
  <% end %>

<%= yield %>

</body>
</html>
